<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="@color/buttonBorderColor" />

            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <padding
                android:left="10dp"
                android:right="10dp" />

            <solid android:color="@color/buttonClickedBackgroundColor" />

            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>

</layer-list>
