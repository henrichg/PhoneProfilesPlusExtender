<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <padding
                android:bottom="@dimen/button_border_thickness"
                android:left="@dimen/button_border_thickness"
                android:right="@dimen/button_border_thickness"
                android:top="@dimen/button_border_thickness" />

            <solid android:color="@color/buttonBorderColor" />

            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>

    <!-- Background -->
    <item>
        <shape>
            <padding
                android:left="10dp"
                android:right="10dp" />

            <solid android:color="@color/buttonBackgroundColor" />

            <corners android:radius="@dimen/button_corner_radius" />
        </shape>
    </item>

</layer-list>
