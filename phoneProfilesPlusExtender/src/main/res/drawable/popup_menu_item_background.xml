<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/rippleRectangeleItemBackgroundColor">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/pppeColorBlack" />
            <corners android:radius="@dimen/rectangel_ripple_corner_radius" />
        </shape>
    </item>

    <item>
        <selector>
            <item android:state_selected="true">
                <color android:color="@color/rippleRectangeleItemBackgroundColor"/>
            </item>

            <item android:state_activated="true">
                <color android:color="@color/rippleRectangeleItemBackgroundColor"/>
            </item>

            <item>
                <color android:color="@android:color/transparent"/>
            </item>
        </selector>
    </item>

</ripple>

