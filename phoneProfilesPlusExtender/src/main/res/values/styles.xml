<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- disable initial empty screen - useful for dark theme -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:textColorPrimary">@color/text_view_color_primary</item>
        <item name="android:textColorSecondary">@color/text_view_color_secondary</item>
        <!--        <item name="android:textColorTertiary">@color/text_color_tertiary</item>-->

        <item name="actionBarStyle">@style/PPPEActionbar</item>
        <item name="android:actionBarStyle">@style/PPPEActionbar</item>

        <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>

        <item name="android:textViewStyle">@style/TextViewTheme</item>
        <item name="android:windowBackground">@color/activityBackgroundColor</item>

        <item name="textAllCaps">false</item>

        <item name="activityDisabledTextColor">@color/activityDisabledTextColor</item>

        <item name="dialogDivider">@color/dialogDividerColor</item>
        <item name="alertDialogTheme">@style/AlertDialogStyleDayNight</item>
        <item name="dialogTheme">@style/DialogStyleDayNight</item>

        <item name="android:popupMenuStyle">@style/PopupMenu_dayNight</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu_dayNight</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuItemStyle</item>
        <item name="dropDownListViewStyle">@style/PopupMenuItemStyle</item>

        <item name="listViewItemBackground">@drawable/listview_item_background_selector</item>
        <item name="popupMenuItemBackground">@drawable/popup_menu_item_background_selector</item>

        <item name="android:selectableItemBackground">@drawable/listview_item_background_selector</item>
        <item name="selectableItemBackground">@drawable/listview_item_background_selector</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background_selector</item>

        <item name="android:scrollbarThumbVertical">@color/scrollbarColor</item>

        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
    </style>

    <style name="AppTheme_noRipple" parent="Theme.AppCompat.DayNight">
        <!-- disable initial empty screen - useful for dark theme -->
        <item name="android:windowDisablePreview">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:windowLightStatusBar">@bool/windowLightStatusBar</item>
        <item name="android:navigationBarColor">@color/navigationBarColor</item>

        <item name="android:textViewStyle">@style/TextViewTheme</item>
        <item name="android:windowBackground">@color/activityBackgroundColor</item>

        <item name="textAllCaps">false</item>

        <item name="activityDisabledTextColor">@color/activityDisabledTextColor</item>

        <item name="dialogDivider">@color/dialogDividerColor</item>
        <item name="alertDialogTheme">@style/AlertDialogStyleDayNight</item>
        <item name="dialogTheme">@style/DialogStyleDayNight</item>

        <item name="android:popupMenuStyle">@style/PopupMenu_dayNight</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu_dayNight</item>
        <item name="android:dropDownListViewStyle">@style/PopupMenuItemStyle</item>
        <item name="dropDownListViewStyle">@style/PopupMenuItemStyle</item>

        <item name="listViewItemBackground">@drawable/listview_item_background_selector_no_ripple</item>
        <item name="popupMenuItemBackground">@drawable/popup_menu_item_background_selector_no_ripple</item>

        <item name="android:selectableItemBackground">@drawable/listview_item_background_selector_no_ripple</item>
        <item name="selectableItemBackground">@drawable/listview_item_background_selector_no_ripple</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_item_background_selector_no_ripple</item>

        <item name="android:scrollbarThumbVertical">@color/scrollbarColor</item>

        <item name="android:lineSpacingExtra">@dimen/line_spacing_extra</item>
    </style>



    <style name="EmptyAppCompatActivity" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Toast</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">@color/pppeColor000</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TextViewTheme" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_view_color_secondary</item>
    </style>

    <style name="AlertDialogStyleDayNight" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:background">@color/activityBackgroundColor</item>
        <item name="android:windowBackground">@drawable/pp_dialog_background</item>
        <item name="colorAccent">@color/accent</item>

        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="DialogStyleDayNight" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowDisablePreview">true</item>
        <item name="android:background">@color/activityBackgroundColor</item>
        <item name="android:windowBackground">@drawable/pp_dialog_background</item>
        <item name="colorAccent">@color/accent</item>

        <item name="buttonBarNegativeButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/AlertButtonStyle</item>
    </style>

    <style name="AlertButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:background">@drawable/pp_alert_button_background_selector</item>
        <item name="android:textColor">@color/action_button_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PPPEActionbar" parent="Widget.AppCompat.ActionBar">
        <item name="android:layout_marginStart">@dimen/activity_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/activity_margin_end</item>

        <!--        <item name="contentInsetStart">@dimen/activity_horizontal_margin</item>-->
        <!--        <item name="contentInsetEnd">0dp</item>-->
    </style>

</resources>
