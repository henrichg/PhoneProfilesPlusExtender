<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="@dimen/single_selection_title_paddingTop"
    tools:ignore="UseCompoundDrawables">

    <TextView
        android:id="@+id/custom_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/single_selection_title_text_size"
        android:textColor="@color/dialogTitleTextColor"
        android:text="" />
<!--    android:textStyle="bold"-->

    <TextView
        android:id="@+id/custom_dialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/single_selection_subtitle_text_size"
        android:textColor="@color/activitySecondaryTextColor"
        android:text=""
        tools:ignore="SpUsage" />

</LinearLayout>